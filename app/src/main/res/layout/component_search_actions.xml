<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/search_background"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Tìm kiếm..."
            android:textSize="16sp"
            android:textColorHint="@android:color/white" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/search_24dp"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Cần hỗ trợ -->
        <LinearLayout
            android:id="@+id/btn_need_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_need_help"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/need_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cần hỗ trợ"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- hỗ trợ người cần -->
        <LinearLayout
            android:id="@+id/btn_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_support"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/support" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Hỗ trợ"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Kết nối -->
        <LinearLayout
            android:id="@+id/btn_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_connect"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/favorite_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Kết nối"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Đăng bài -->
        <LinearLayout
            android:id="@+id/btn_create_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_add_post"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/add_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đăng bài"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Menu -->
        <LinearLayout
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/menu_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Menu"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Reload Button -->
    <ImageView
        android:id="@+id/iv_reload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:scaleType="centerInside"
        android:src="@drawable/autorenew_24dp" />

</LinearLayout>
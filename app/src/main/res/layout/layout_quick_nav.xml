<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Cần hỗ trợ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnCanHoTro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_need_help"
            android:background="@null"
            android:scaleType="centerInside"
            android:tint="#D50000"
            android:contentDescription="Cần hỗ trợ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cần hỗ trợ"
            android:textColor="#D50000"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Hỗ trợ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnHoTro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_offer_help"
            android:background="@null"
            android:scaleType="centerInside"
            android:tint="#D50000"
            android:contentDescription="Hỗ trợ" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ"
            android:textColor="#D50000"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Kết nối -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnKetNoi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_connect"
            android:background="@null"
            android:scaleType="centerInside"
            android:tint="#D50000"
            android:contentDescription="Kết nối" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết nối"
            android:textColor="#D50000"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Menu -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu"
            android:background="@null"
            android:scaleType="centerInside"
            android:tint="#D50000"
            android:contentDescription="Menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#D50000"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
